<a href="/">Homepage</a>
<div>
    <h1>Profile of <%= user.fname + " " + user.lname%>
    </h1>
    <div style="display: flex; flex-direction: column;">
        <label>First Name: <%= user.fname%></label>
        <label>Last Name: <%= user.lname%></label>
        <label>Gender: <%= user.gender%></label>
        <label>Date Of Birth: <%= user.dob%></label>
        <label>Hometown: <%= user.hometown%></label>
    </div>

    <a href="/albums/<%= user.uid %>">Albums</a>

    <div id="friend-list">
        <h3>Friends List</h3>
        <% friends.forEach(function(row) { %>
            <div style="display: flex; flex-direction: row;">
                <a href="/profile/<%= row.fid %>"><%= row.fname + " " + row.lname %></a>
            </div>
            <% }); %>
    </div>
</div>